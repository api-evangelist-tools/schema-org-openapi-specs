---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
	<channel>
		<title>{{ site.title }}</title>
		<description>{{ site.project_summary }}</description>
		<link>{{ site.url }}</link>
		<language>en-us</language>
		<atom:link href="{{ site.url }}/blog.xml" rel="self" type="application/rss+xml" />
		{% for post in site.posts limit:50 %}{% if post.title != null %}<item>
				<title>{{ post.title }}</title>
				<description>{{ post.content | xml_escape }}</description>
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<link>{{ post.source }}</link>
				<guid isPermaLink="true">{{ post.source }}</guid>
			</item>{% endif %}{% endfor %}
	</channel>
</rss>
